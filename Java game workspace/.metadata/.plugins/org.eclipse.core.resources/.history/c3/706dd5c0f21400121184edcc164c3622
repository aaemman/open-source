package com.pp.azteroids.player;

import java.awt.Image;

import javax.swing.ImageIcon;

public class Player {
	int x, dx, y;
	Image playerImage;
	
	public Player(){
		ImageIcon i = new ImageIcon("player1.png");
		playerImage = i.getImage();
		x = 10;
		y = 172;
		
	}

	public void move(){
		x = x+dx;
	}
	public int getX(){
		return x;
	}
	public int getY(){
		return y;
	}
	public Image getPlayerImage(){
		return playerImage;
			
	}
}
